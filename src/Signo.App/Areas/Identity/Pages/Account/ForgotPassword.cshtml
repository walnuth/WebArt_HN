@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu seu email?";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-2" style="horiz-align: center;">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2" style="horiz-align: center; height: 100%;">
        <img src="~/imagens/LOGO SIGNO BETA.png" alt="Signo App" class="imgBETA" id="imgBETA" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
