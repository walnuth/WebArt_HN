@using Signo.Business.Models
@model Signo.App.ViewModels.IntegranteViewModel

@{
    ViewData["Title"] = "Adicionar Integrante";
}

<hr />

<h4>Integrante</h4>
<hr />

<div class="col-md-6">
    <form asp-action="Create" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <dl>

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Unidade)
            </dt>
            <dd>
                <select asp-for="Unidade" class="form-control" asp-items=@(new SelectList(Enum.GetValues(typeof(EnumRig))))>
                    <option></option>
                </select>
                <span asp-validation-for="Unidade" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Matricula)
            </dt>
            <dd>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FuncaoBordo)
            </dt>
            <dd>
                <input asp-for="FuncaoBordo" class="form-control" />
                <span asp-validation-for="FuncaoBordo" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FuncaoContrato)
            </dt>
            <dd>
                <input asp-for="FuncaoContrato" class="form-control" />
                <span asp-validation-for="FuncaoContrato" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Empresa)
            </dt>
            <dd>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </dt>
            <dd>
                <input asp-for="Nacionalidade" class="form-control" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </dd>
            <dt>
                @*@Html.DisplayNameFor(model => model.Admin)*@
            </dt>
            <dd>
                <input class="form-check-input checkEdit" asp-for="Admin" /> @Html.DisplayNameFor(model => model.Admin)
            </dd>
            <dt>
                @*@Html.DisplayNameFor(model => model.Ativo)*@
            </dt>
            <dd>
                <input class="form-check-input checkEdit" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genero)
            </dt>
            <dd>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Admissao)
            </dt>
            <dd>
                <input asp-for="Admissao" class="form-control" />
                <span asp-validation-for="Admissao" class="text-danger"></span>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DoB)
            </dt>
            <dd>
                <input asp-for="DoB" class="form-control" />
                <span asp-validation-for="DoB" class="text-danger"></span>
            </dd>

        </dl>

        <div class="col-md-12" style="margin: 0; padding: 0;">
            <label asp-for="ImgFotoUpload" class="control-label"></label>
            <div class="custom-file" id="custom-file1" style="margin: 0; padding: 0;">

                <input type="file" class="custom-file-input" id="ImgFotoUpload" asp-for="ImgFotoUpload" />
                <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImgFotoUpload"></label>
                <label style="display: none" id="ImgFotoUploadNome"></label>
            </div>
            <label asp-for="ImgSignUpload" class="control-label"></label>
            <div class="custom-file" id="custom-file1">
                <label asp-for="ImgSignUpload" class="control-label"></label>
                <input type="file" class="custom-file-input" asp-for="ImgSignUpload" />
                <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImgSignUpload"></label>
                <label style="display: none" id="ImgSignUploadNome"></label>
            </div>
          
        </div>




        <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top: 10px" />
    </form>
</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImgFotoUpload").change(function () {
            $("#ImgFotoUploadNome").text(this.files[0].name);
            $("#ImgFotoUploadNome")[0].style.display = 'block';
            document.getElementById("custom-file1").style.backgroundColor = "#000000";
        });

        $("#ImgFotoUpload").attr("data-val", "true");
        $("#ImgFotoUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
    <script>
        $("#ImgSignUpload").change(function () {
            $("#ImgSignUploadNome").text(this.files[0].name);
            $("#ImgSignUploadNome")[0].style.display = 'block';
            document.getElementById("custom-file2").style.backgroundColor = "#000000";
        });

        $("#ImgSignUpload").attr("data-val", "true");
        $("#ImgSignUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>



}
